{
  "name": "auto-change-tracker",
  "displayName": "Auto Change Tracker",
  "description": "Automatically track all your project changes to daily text files",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autoChangeTracker.startTracking",
        "title": "Start Auto Change Tracking",
        "category": "Auto Change Tracker"
      },
      {
        "command": "autoChangeTracker.stopTracking",
        "title": "Stop Auto Change Tracking",
        "category": "Auto Change Tracker"
      },
      {
        "command": "autoChangeTracker.showStatus",
        "title": "Show Tracking Status",
        "category": "Auto Change Tracker"
      },
      {
        "command": "autoChangeTracker.openDailyLog",
        "title": "Open Today's Log File",
        "category": "Auto Change Tracker"
      },
      {
        "command": "autoChangeTracker.openLogsFolder",
        "title": "Open Logs Folder",
        "category": "Auto Change Tracker"
      }
    ],
    "statusBar": {
      "items": [
        {
          "id": "autoChangeTracker.status",
          "name": "Auto Change Tracker Status",
          "alignment": "right",
          "priority": 100
        }
      ]
    },
    "configuration": {
      "title": "Auto Change Tracker",
      "properties": {
        "autoChangeTracker.enabled": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic change tracking"
        },
        "autoChangeTracker.logsDirectory": {
          "type": "string",
          "default": "daily-changes",
          "description": "Directory to store daily log files"
        },
        "autoChangeTracker.ignoredPatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules",
            ".git",
            ".vscode",
            "dist",
            "build",
            "*.log",
            "daily-changes"
          ],
          "description": "File patterns to ignore"
        },
        "autoChangeTracker.showNotifications": {
          "type": "boolean",
          "default": false,
          "description": "Show notifications when files are tracked"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  }
} 